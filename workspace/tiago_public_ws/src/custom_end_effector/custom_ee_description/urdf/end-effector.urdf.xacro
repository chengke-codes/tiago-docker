<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!--
    This macro will be invoked by the tiago_description package

    Parameters:
    - parent: Parent link
    
    Child Nodes:
    - origin: Origin of the joint connection parent with the next link, as an origin tag
  -->
  <xacro:macro name="end_effector" params="parent *origin">

    <!-- Example link and Joint -->
    <link name="cee_tool_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.0001" />
        <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
                 iyy="0.00001" iyz="0.0"
                 izz="0.00001" />
      </inertial>
      <visual>
        <origin xyz="0 0 -0.025" rpy="0 0 0" />
        <geometry>
          <cylinder length="0.07" radius="0.015"/>
        </geometry>
        <material name="ee_material">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 -0.025" rpy="0 0 0" />
        <geometry>
          <cylinder length="0.07" radius="0.015"/>
        </geometry>
      </collision>
    </link>
    <joint name="cee_tool_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}" />
      <child link="cee_tool_link" />
      <axis xyz="0 0 0" />
    </joint>

    <!-- 
      Include the URDF of your custom end effector, as well as any controllers or gazebo plugins needed here.
    -->
  </xacro:macro>
</robot>
