<launch>
  <arg name="laser" default="sick-561"/>

  <include file="$(find pmb2_laser_sensors)/launch/$(arg laser)_laser.launch"/>

  <node name="laser_filter" pkg="laser_filters" type="scan_to_scan_filter_chain">
    <rosparam file="$(find pmb2_laser_sensors)/config/$(arg laser)_filter.yaml" command="load"/>
    <remap from="scan"          to="scan_raw"/>
    <remap from="scan_filtered" to="scan"/>
  </node>

</launch>
